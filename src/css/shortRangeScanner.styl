.shortRangeScanner
  panel (0)
  grid-column: 1
  grid-row: 1
  position relative

  .menu
    position absolute
    width: 320px
    height: 100px
    z-index: $popoverZIndex
    top: 66%

    .menuArrowUpContainer
      display: flex
      justify-content: center
      .menuArrowUp
        width: 0; 
        height: 0; 
        border-left: 15px solid transparent
        border-right: 15px solid transparent  
        border-bottom: 15px solid $menuBackground

    .menuBody
      background-color: $menuBackground
      border-radius: 4px
      //border-left: 1px solid $menuBorderColor
      //border-right: 1px solid $menuBorderColor
      //border-bottom: 1px solid $menuBorderColor
      padding: 2ch
      display: flex
      flex-direction: column
      justify-content: flex-start
      align-items: stretch
      box-shadow: 3px 3px 3px #111

      button 
        display: block
        retro-button(#333, #444, #666, #222)

    
  .menuCentered    
    left: 50%    
    transform: translateX(-50%)    

  .menuLeft
    left: 66%

  .verticalLine
    padding: 0px
    margin: 0px
    position: absolute
    height: 100%
    border-right-style: dashed
    border-right-width: 2px
    border-right-color: darkgreen
    opacity: 0.5

  .horizontalLine
    padding: 0px
    margin: 0px
    position: absolute
    width: 100%
    border-bottom-style: dashed
    border-bottom-width: 2px
    border-bottom-color: darkgreen
    opacity: 0.5

  .overlayGrid
    position: absolute
    display grid
    width 100%
    height 100%
    grid-gap: 0
    cursor: grab

  .phaserOverlay
    position: absolute
    width 100%
    height 100%
    transition opacity 750ms ease-out

  .gameObjects
    position: absolute
    width 100%
    height 100%

    .gameObject
      position: absolute
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center

  .explosion
    position: absolute
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center