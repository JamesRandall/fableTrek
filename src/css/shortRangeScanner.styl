.shortRangeScanner
  panel (0)
  grid-column: 1
  grid-row: 1
  position relative

  .verticalLine
    padding: 0px
    margin: 0px
    position: absolute
    height: 100%
    border-right-style: dashed
    border-right-width: 2px
    border-right-color: darkgreen
    opacity: 0.5

  .horizontalLine
    padding: 0px
    margin: 0px
    position: absolute
    width: 100%
    border-bottom-style: dashed
    border-bottom-width: 2px
    border-bottom-color: darkgreen
    opacity: 0.5

  .overlayGrid
    position: absolute
    display grid
    width 100%
    height 100%
    grid-gap: 0
    cursor: grab

  .gameObject
    position: absolute
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center