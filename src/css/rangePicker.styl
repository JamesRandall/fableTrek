$rangePickerBarHeight = 8px
$rangePickerThumbHeight = 24px
$trackColor = rgba(255,0,0,0.2)

input[type=range] {
  -webkit-appearance: none;
  margin: 0px 0;
  width: 100%;
  background-color: rgba(0,0,0,0.0)
}
input[type=range]:focus {
  outline: none;
}
input[type=range]::-webkit-slider-runnable-track {
  width: 100%;
  height: $rangePickerBarHeight;
  cursor: pointer;
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  background: $trackColor
  border-radius: 25px;
  border: 0px solid #000101;
}
input[type=range]::-webkit-slider-thumb {
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  border: 0px solid #000000;
  height: $rangePickerThumbHeight;
  width: $rangePickerThumbHeight;
  border-radius: $rangePickerThumbHeight
  background: $danger;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: -($rangePickerBarHeight);
}
input[type=range]:focus::-webkit-slider-runnable-track {
  background: dangerAlpha(0.4);
}
input[type=range]::-moz-range-track {
  width: 100%;
  height: $rangePickerBarHeight;
  cursor: pointer;
  animate: 0.2s;
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  background:  $trackColor
  border-radius: 25px;
  border: 0px solid #000101;
}
input[type=range]::-moz-range-thumb {
  box-shadow: 0px 0px 0px #000000, 0px 0px 0px #0d0d0d;
  border: 0px solid #000000;
  height: $rangePickerThumbHeight;
  width: $rangePickerThumbHeight;
  border-radius: $rangePickerThumbHeight
  background: $danger;
  cursor: pointer;
}

