.weapons
  standardPaddedPanel ()
  flex-grow: 1

  .inner
    propertyGrid ()

  .torpedoes
    display flex
    justify-content: space-between
    flex-direction: row
    align-items: center

    .torpedo
      height 1.5ch
      width 1.5ch
      border-radius: 0.75ch

    .torpedoActive
      background-color: $danger

    .torpedoInactive
      background-color: $indicatorBackgroundColor