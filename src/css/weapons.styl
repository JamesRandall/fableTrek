.weapons
  standardPaddedPanel ()
  flex-grow: 1
  display: flex
  flex-direction: column

  .inner
    propertyGrid ()

  .torpedoes
    display flex
    justify-content: space-between
    flex-direction: row
    align-items: center

    .torpedo
      height 1.5ch
      width 1.5ch
      border-radius: 0.75ch

    .torpedoActive
      background-color: $danger

    .torpedoInactive
      background-color: $indicatorBackgroundColor

  .targets
    flex-grow: 1
    margin-top: $propertyGridRowGap
    position relative
    display grid
    grid-template-columns: 1fr 1fr 1fr
    grid-auto-flow: column
    grid-column-gap: $propertyGridColGap
      
    .target
      position relative
      width: 100%
      //padding-top: 100%
      
      .noTargetAcquiredLabel
        font-family: pixelated
        font-size: 10px
        position absolute
        color rgb(0,128,0)
        top -3px
        left 0px
        right 0px
        bottom 0px
        display: flex
        justify-content: center
        align-items: center