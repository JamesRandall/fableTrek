.weapons
  standardPaddedPanel ()
  flex-grow: 1
  display: flex
  flex-direction: column

  .inner
    propertyGrid ()

  .torpedoes
    display flex
    justify-content: space-between
    flex-direction: row
    align-items: center

    .torpedo
      height 1.5ch
      width 1.5ch
      border-radius: 0.75ch

    .torpedoActive
      background-color: $danger

    .torpedoInactive
      background-color: $indicatorBackgroundColor

  .targets
    margin-top: $propertyGridRowGap
    position relative
    display grid
    grid-template-columns: 1fr 1fr 1fr
    grid-auto-flow: column
    grid-column-gap: $propertyGridColGap
      
    .target
      position relative
      width: 100%
      display: flex
      flex-direction: column
      justify-content: space-between
      align-items: center
      max-height: 121px
      
      .graphicAndCoords
        width: 100%
        max-height: 60%
        display: flex
        flex-grow: 1
        flex-direction: row
        justify-content: space-between
        .graphicContainer
          flex-grow: 1 
          .graphic
            width: 90%
            height: 90%        
      //padding-top: 100%

      .summary
        width: 100%
        display: grid
        grid-template-columns: 2ch auto
      
      .noTargetAcquiredLabel
        font-family: pixelated
        font-size: 10px
        position absolute
        color rgb(0,128,0)
        top -1px
        left 0px
        right 0px
        bottom 0px
        display: flex
        justify-content: center
        align-items: center